	echo '<label for="ctrl_'.$this->id.'" class="label '.$this->label_style.' '.$this->id.'">';

}
if ($this->mandatory){
  	echo '<span class="invisible">'.$this->mandatoryField.'</span> ';
  	echo '<span class="mandatory">*</span>';
	
}
	echo $this->label;
	echo '</label>';
	
	
	echo '<div class="'.$this->ftc_field_classes.' '.$this->class.' '.$this->id.'" >';

	foreach ($this->arrOptions as $i => $arrOpt) {
		
		echo '  <input type="'.$this->type.'" name="'.$arrOpt['name'].'" id="ctrl_'.$arrOpt['id'].'" class="checkbox';
		if ($arrOpt['class']) {
		echo ' '.$arrOpt['class'];
